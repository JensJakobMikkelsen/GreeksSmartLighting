<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_preferences_signal_strength"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="62dp"
        android:text="Signal strength:"
         />

    <TextView
        android:id="@+id/textview_preferences_signal_strength"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="62dp"
        android:text="blank"
        />

    <TextView
        android:id="@+id/text_preferences_connection_time"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="62dp"
        android:text="Connection time:"
        />

    <TextView
        android:id="@+id/textview_preferences_connection_time"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="62dp"
        android:text="blank"
        />

</LinearLayout>
